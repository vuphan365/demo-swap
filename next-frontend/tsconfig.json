{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "strictNullChecks": false,
    "target": "es5",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./components/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "./**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}